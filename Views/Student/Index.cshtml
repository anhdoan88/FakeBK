@model List<Student>


<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Student List
            </h2>

        </div>
        <div class="col-12 mb-3">
            <a asp-controller="Student" asp-action="Find" class="btn btn-primary me-2">
                Find
            </a>
        </div>
        @if (User.IsInRole(SD.Role_Admin))
        {
            
            <div class="col-12 text-start ">
                <a asp-controller="Student" asp-action="Create" class="btn btn-primary me-2">
                Create new
            </a>
        </div>
        }
    </div>
</div>


<table class=" table table-bordered table-striped">
    <thead>

    <tr>
        <th>
            Student ID
        </th>
        <th>
            Student Personal ID
        </th>
        <th>
            Student Class ID
        </th>
    </tr>
    <thead>
        <tbody>
                @foreach(var obj in Model.OrderBy(u => u.Id))
                {
            <tr>
                <td>
                    @obj.Id
                </td>
                <td>
                    @obj.OrgpId
                </td>
                <td>
                    @obj.ClassId
                </td>
                        @if (User.IsInRole(SD.Role_Admin)){
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Student" asp-action="Edit" asp-route-id="@obj.Id"  class="btn btn-primary mx-2">
                            Edit
                        </a>
                          <a asp-controller="Student" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                             Delete
                         </a> 
                    </div>
                </td>
                        }


            </tr>
                }
        </tbody>

</table>