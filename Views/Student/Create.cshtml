@model FakeBK.Models.Student

@{
    ViewData["Title"] = "Create New Student";
}

<h2>Create New Student</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Id"></label>
        <input asp-for="Id" class="form-control" />
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="OrgpId">Orgperson</label>
        <select asp-for="OrgpId" class="form-control" asp-items="@(new SelectList(ViewBag.OrgPeople, "Id", "Id"))">
            <option value="">-- Select Orgperson --</option>
        </select>
        <span asp-validation-for="OrgpId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ClassId">Class</label>
        <select asp-for="ClassId" class="form-control" asp-items="@(new SelectList(ViewBag.Classes, "Id", "Id"))">
            <option value="">-- Select Class --</option>
        </select>
        <span asp-validation-for="ClassId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>
