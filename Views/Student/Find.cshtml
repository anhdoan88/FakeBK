@model FakeBK.Models.Student
@{
    ViewData["Title"] = "Find Student";
}

<h2>Find Student</h2>

<form asp-action="Find" method="get">
    <div class="form-group">
        <label for="StudentId">Enter Student ID:</label>
        <input type="number" id="StudentId" name="Id" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Search</button>
    <div class="col-6 col-md-3">
        <a asp-controller="Student" asp-action="Index" class="btn btn-secondary form-control">
            Go back
        </a>
    </div>
</form>

@if (ViewBag.Message != null)
{
    <div class="alert alert-info mt-3">
        @ViewBag.Message
    </div>
}

@if (Model != null)
{
    <h3>Student Details</h3>
    <ul>
        <li><strong>ID:</strong> @Model.Id</li>
        <li><strong>Personal ID:</strong> @Model.OrgpId</li>
        <li><strong>ClassID:</strong> @Model.ClassId</li>
       
    </ul>
}

