@model FakeBK.Models.Teacher

@{
    ViewData["Title"] = "Create New Teacher";
}

<h2>Create New Teacher</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Id">Teacher ID</label>
        <input asp-for="Id" class="form-control" />
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="OrgpId">Orgperson</label>
        <select asp-for="OrgpId" class="form-control" asp-items="@(new SelectList(ViewBag.OrgPeople, "Id", "Id"))">
            <option value="">-- Select Orgperson --</option>
        </select>
        <span asp-validation-for="OrgpId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DeptId">Department</label>
        <select asp-for="DeptId" class="form-control" asp-items="@(new SelectList(ViewBag.Departments, "Id", "Name"))">
            <option value="">-- Select Department --</option>
        </select>
        <span asp-validation-for="DeptId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
