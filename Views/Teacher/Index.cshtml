@model List<Teacher>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Techers List
            </h2>
        </div>
              <div class="col-6 text-end">
          <a asp-controller="Teacher" asp-action="Find" class="btn btn-primary">
          Find
          </a>
          </div>  
    </div>
</div>


<table class=" table table-bordered table-striped">
    <thead>

        <tr>
            <th>
                Teacher ID
            </th>
            <th>
                Teacher Personal ID
            </th>
            <th>
                Teacher Department ID
            </th>
        </tr>
    <thead>
    <tbody>
                @foreach (var obj in Model.OrderBy(u => u.Id))
                {
            <tr>
                <td>
                            @obj.Id
                </td>
                <td>
                            @obj.OrgpId
                </td>
                <td>
                            @obj.DeptId
                </td>
                        @if (!User.IsInRole(SD.Role_Student)){
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Teacher" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            Edit
                        </a>
                                @* <a asp-controller="Student" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                    Delete
                    </a> *@
                    </div>
                </td>
                        }
            </tr>
                }
    </tbody>

</table>
